{
    "name": "purist/http-message",
    "description": "PSR7 implementation of http messages",
    "keywords": ["psr7", "http", "message", "request", "response", "stream", "uri", "url"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nicholas Ruunu",
            "email": "nicholas@ruu.nu"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-mbstring": "*",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "phpspec/phpspec": "^3.0",
        "memio/spec-gen": "^0.7",
        "php-mock/php-mock-prophecy": "^0.0.2",
        "friendsofphp/php-cs-fixer": "^2.3"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": {
            "Purist\\Http\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
